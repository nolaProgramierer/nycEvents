
  <div class="row">
    <div class = "col-md-4 col-md-offset-4" id="title">
      <h1>NYC Cultural Events</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3" id="events-form">
        <%= form_tag(events_path) do %>

        <div class="col-md-12 text-center">

          <%= label_tag "events", "Select your desired entertainment type:" %><br>

          <div class="btn-group btn-group-sm" data-toggle="buttons">
            <label class="btn btn-primary active">
            <%= radio_button_tag   :event_type, "Theater" %>Theater
                <%# label_tag      :event_type_theater, "Theater" %>
            </label>
            <label class="btn btn-primary">
            <%= radio_button_tag   :event_type, "Movies" %>Movies
              <%# label_tag        :event_type_movies, "Movies" %>
            </label>
            <label class="btn btn-primary">
            <%= radio_button_tag   :event_type, "Dance" %>Dance
              <%# label_tag        :event_type_movies, "Dance" %>
            </label>
            <label class="btn btn-primary">
            <%= radio_button_tag   :event_type, "Jazz" %>Jazz
              <%# label_tag        :event_type_jazz, "Jazz" %>
            </label>
            <label class="btn btn-primary">
            <%= radio_button_tag   :event_type, "Classical" %>Classical
              <%# label_tag        :event_type_classical, "Classical" %>
            </label>
          </div>
        </div>


          <div class="row">
            <div class="col-md-12 text-center">
              <%= submit_tag "Submit selection", class: "btn btn-info btn-sm", id: "submit-btn" %>
            </div>
          </div>
          <% end %>
      </div>
    </div><!--row-->

  <div class="row">
    <!-- <div class= "col-md-8 col-md-offset-2 pre-scrollable" id="event-box"> -->
      <dl class= "col-md-8 col-md-offset-2 pre-scrollable" id="event-box">
        <% @results.each do |listing| %>
          <dt><%= listing['event_name']%></dt>
            <dd><%= listing['venue_name'] %></dd>
            <dd><%= listing['street_address'] %></dd>
            <dd><%= listing['date_time_description'] %></dd>
            <dd><%= listing['web_description'].html_safe %></dd>
          <% end %>
      </dl>
    <!-- </div> -->
  </div>
